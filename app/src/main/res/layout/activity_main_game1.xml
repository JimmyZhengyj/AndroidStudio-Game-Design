<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="false"
    tools:context=".MainGames.MainActivityLevelOne">

<!--    android:background="#f3f3f3"-->


    <FrameLayout
        android:id="@+id/frame0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text0"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Score :0"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/frame0"
            app:layout_constraintStart_toStartOf="@+id/frame0"
            app:layout_constraintTop_toTopOf="@+id/frame0">

        </TextView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="300dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/frame0"
            app:layout_constraintTop_toTopOf="@+id/frame0">

        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="#F1F8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame0">


        <ImageView
            android:id="@+id/pokeball"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pokeball">

        </ImageView>

        <ImageView
            android:id="@+id/masterball"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/masterball">

        </ImageView>

        <ImageView
            android:id="@+id/heal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heal">

        </ImageView>

        <ImageView
            android:id="@+id/bomb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/bombooo">

        </ImageView>

        <!--        <ImageView-->
        <!--            android:id="@+id/pikaqiu"-->
        <!--            android:layout_width="70dp"-->
        <!--            android:layout_height="70dp"-->
        <!--            android:src="@drawable/pikaqiu">-->

        <!--    </ImageView>-->

        <ImageView
            android:id="@+id/character"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <!--            android:src="@drawable/eevee">-->

        </ImageView>

        <!--        <ImageView-->
        <!--            android:id="@+id/psyduck"-->
        <!--            android:layout_width="70dp"-->
        <!--            android:layout_height="70dp"-->
        <!--            android:src="@drawable/psyduck">-->

        <!--        </ImageView>-->

    </FrameLayout>

    <Button
        android:id="@+id/upbutton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="92dp"
        android:text="UP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame"></Button>

    <Button
        android:id="@+id/rightbutton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:text="RIGHT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame"></Button>

    <Button
        android:id="@+id/downbutton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="92dp"
        android:text="DOWN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame"></Button>

    <Button
        android:id="@+id/leftbutton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="172dp"
        android:text="LEFT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame"></Button>

    <Button
        android:id="@+id/pausebutton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="272dp"
        android:onClick="Pause"
        android:text="PAUSE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>